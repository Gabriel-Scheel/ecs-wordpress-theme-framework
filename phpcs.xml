<?xml version="1.0" encoding="UTF-8" ?>
<ruleset name="NobleStudios">
	<description>NobleStudios coding standard based loosely on http://codeigniter.com/user_guide/general/styleguide.html.</description>

	<exclude-pattern>*/_cutup/*</exclude-pattern>
	<exclude-pattern>*/_portal/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>
	<exclude-pattern>*/vendors/*</exclude-pattern>

	<rule ref="Generic.Files.LineEndings">
		<properties>
			<property name="eolChar" value="\n"/>
		</properties>
	</rule>

	<!-- Always use full PHP opening tags -->
	<rule ref="Generic.PHP.DisallowShortOpenTag"/>

	<!-- Constants should always be fully uppercase -->
	<rule ref="Generic.NamingConventions.UpperCaseConstantName"/>

	<!-- TRUE, FALSE, and NULL keywords should always be fully uppercase -->
	<rule ref="Generic.PHP.UpperCaseConstant"/>

	<!-- Classes and functions should be commented -->
	<rule ref="PEAR.Commenting.ClassComment"/>

	<!-- Require a header doc comment -->
	<rule ref="PEAR.Commenting.FileComment">
	<properties>
		<property name="error" value="false"/>
	</properties>
	</rule>

	<!-- Class attributes require comments -->
	<rule ref="Squiz.Commenting.VariableComment">
	<properties>
		<property name="error" value="false"/>
	</properties>
	</rule>

	<!-- Use Allman style indenting. With the exception of Class declarations,
	   braces are always placed on a line by themselves, and indented at the same level as the control statement that "owns" them. -->
	<rule ref="Generic.Functions.OpeningFunctionBraceBsdAllman"/>

	<!-- No weirdo spacing in function arguments! -->
	<rule ref="Generic.Functions.FunctionCallArgumentSpacing"/>

	<!-- Check for bad practices -->
	<rule ref="Squiz.PHP.Eval"/>

</ruleset>
